# State Machine Definition
states:
  - idle
  - detection
  - analysis
  - constraint
  - validation
  - complete

# Trigger Conditions
triggers:
  ai_requests:
    - "function"
    - "method"
    - "def "
    - "function "
    - "create function"
  content_patterns:
    - "def process\\("
    - "def handle\\("
    - "def update\\("
    - "def get\\("
    - "def set\\("
    - "function process\\("
    - "function handle\\("
  anti_patterns:
    - "generic function names"
    - "vague method names"
    - "unclear function purpose"

# State Transitions
transitions:
  idle â†’ detection:
    on: [vague_function_detected, generic_method_found]
    condition: "meaningless_function_name_detected"
    
  detection â†’ analysis:
    on: "function_context_identified"
